{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AoE4 Overlay",
  "version": "0.2.4",
  "identifier": "com.aoe4overlay.overlay",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "overlay",
        "title": "AoE4 Overlay",
        "width": 500,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "x": 50,
        "y": 50
      },
      {
        "label": "settings",
        "title": "AoE4 Overlay - Settings",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "shortDescription": "Build order overlay for Age of Empires IV",
    "longDescription": "A transparent overlay that displays build orders during Age of Empires IV gameplay. Import builds from aoe4world.com or aoe4guides.com, navigate with hotkeys, and improve your game.",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      }
    }
  }
}
